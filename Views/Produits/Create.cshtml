@model GestionStock.Models.Produit

@{
    ViewData["Title"] = "Créer un produit";
}

<style>
    .form-container {
        background: #fff;
        border-radius: 1rem;
        padding: 2rem;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.05);
    }

    .form-label {
        font-weight: 500;
        color: #333;
    }

    .form-control {
        border-radius: 0.5rem;
        transition: border-color 1.2s, box-shadow 0.8s;
        border: 1px solid #ccc;
    }

        .form-control:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
        }

    .btn-primary {
        background-color: #0d6efd;
        border-radius: 0.6rem;
        font-weight: 500;
        padding: 0.6rem 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.4rem;
    }

    .btn-outline-secondary {
        border-radius: 0.5rem;
        padding: 0.5rem 1rem;
        font-weight: 500;
        text-decoration: none;
        margin-left: 1rem;
    }

    .btn-primary i {
        font-size: 1.2rem;
    }
</style>

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-dark fw-bold mb-0">@ViewData["Title"]</h2>
        <a class="btn btn-outline-secondary" href="@Url.Action("Index")">
            <i class="material-symbols-rounded align-middle">arrow_back</i> Retour
        </a>
    </div>

    <div class="form-container mx-auto" style="max-width: 720px;">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="mb-3">
                <label asp-for="Nom" class="form-label">Nom du produit</label>
                <input asp-for="Nom" class="form-control" />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Prix" class="form-label">Prix</label>
                <input asp-for="Prix" class="form-control" />
                <span asp-validation-for="Prix" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Fournisseur" class="form-label">Fournisseur</label>
                <input asp-for="Fournisseur" class="form-control" />
                <span asp-validation-for="Fournisseur" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="SeuilMin" class="form-label">Seuil minimum</label>
                <input asp-for="SeuilMin" class="form-control" />
                <span asp-validation-for="SeuilMin" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="SousCategorieId" class="form-label">Sous-catégorie</label>
                <select asp-for="SousCategorieId" class="form-control" asp-items="ViewBag.SousCategorieId">
                    <option value="">Sélectionner une sous-catégorie</option>
                </select>
                <span asp-validation-for="SousCategorieId" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-primary">
                    <i class="material-symbols-rounded">add_circle</i> Créer
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
