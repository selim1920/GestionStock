@model GestionStock.Models.Produit

@{
    ViewData["Title"] = "Supprimer un produit";
}

<style>
    .form-container {
        background: #fff;
        border-radius: 1rem;
        padding: 2rem;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.05);
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
        border-radius: 0.5rem;
        padding: 0.6rem 1.2rem;
        font-weight: 500;
        color: #fff;
    }

    .btn-outline-secondary {
        border-radius: 0.5rem;
        padding: 0.6rem 1.2rem;
        font-weight: 500;
        text-decoration: none;
        margin-left: 1rem;
    }

    .label-title {
        font-weight: 600;
        font-size: 1.3rem;
        color: #222;
    }
</style>

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-dark fw-bold mb-0">@ViewData["Title"]</h2>
        <a class="btn btn-outline-secondary" href="@Url.Action("Index")">
            <i class="material-symbols-rounded align-middle">arrow_back</i> Retour
        </a>
    </div>

    <div class="form-container mx-auto" style="max-width: 720px;">
        <h4 class="label-title mb-3">Voulez-vous vraiment supprimer ce produit ?</h4>
        <dl class="row">
            <dt class="col-sm-3">Nom</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Nom)</dd>

            <dt class="col-sm-3">Prix</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Prix)</dd>

            <dt class="col-sm-3">Fournisseur</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Fournisseur)</dd>

            <dt class="col-sm-3">Seuil Min</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.SeuilMin)</dd>

            <dt class="col-sm-3">Sous-catégorie</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.SousCategorie.Nom)</dd>
        </dl>

        <form asp-action="Delete" class="d-flex justify-content-end mt-4">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Supprimer" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-outline-secondary">Annuler</a>
        </form>
    </div>
</div>
