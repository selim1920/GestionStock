@model GestionStock.Models.MouvementStock

@{
    ViewData["Title"] = "Supprimer un mouvement de stock";
}

<style>
    .form-container {
        background: #fff;
        border-radius: 1rem;
        padding: 2rem;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.05);
    }

    .form-label {
        font-weight: 500;
        color: #333;
    }

    .form-control {
        border-radius: 0.5rem;
        transition: border-color 1.2s, box-shadow 0.8s;
        border: 1px solid #ccc;
    }

        .form-control:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
        }

    .btn-primary {
        background-color: #0d6efd;
        border-radius: 0.6rem;
        font-weight: 500;
        padding: 0.6rem 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.4rem;
    }

    .btn-outline-secondary {
        border-radius: 0.5rem;
        padding: 0.5rem 1rem;
        font-weight: 500;
        text-decoration: none;
        margin-left: 1rem;
    }

    .btn-danger {
        background-color: #dc3545;
        border-radius: 0.6rem;
        padding: 0.6rem 1.5rem;
    }

    .btn-primary i {
        font-size: 1.2rem;
    }

    .form-container h4 {
        margin-bottom: 1.5rem;
    }

    .d-flex {
        margin-top: 1.5rem;
    }

    .row {
        margin-bottom: 1.5rem;
    }
</style>

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-dark fw-bold mb-0">@ViewData["Title"]</h2>
        <a class="btn btn-outline-secondary" href="@Url.Action("Index")">
            <i class="material-symbols-rounded align-middle">arrow_back</i> Retour
        </a>
    </div>

    <div class="form-container mx-auto" style="max-width: 720px;">
        <h4>Mouvement de stock</h4>
        <hr />
        <h3>Êtes-vous sûr de vouloir supprimer ce mouvement de stock ?</h3>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Produit)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Produit.Nom)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Entrepot)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Entrepot.Adresse)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TypeMouvement)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TypeMouvement)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Quantite)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Quantite)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Date)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Date)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex justify-content-end">
                <input type="submit" value="Supprimer" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retour à la liste</a>
</div>
