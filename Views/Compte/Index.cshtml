@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Connexion & Inscription</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .fade-in { animation: fadeIn 0.5s ease-out forwards; }
        .tab-content { display: none; }
        .tab-content.active { display: block; animation: fadeIn 0.5s ease-out; }
        .tab-button.active { background-color: #3b82f6; color: white; }

        .input-group { position: relative; margin-bottom: 1.5rem; }
        .input-group input { transition: all 0.3s ease; }

        .input-group input:focus + label,
        .input-group input:not(:placeholder-shown) + label {
            transform: translateY(-24px) scale(0.85);
            color: #3b82f6;
        }

        .input-group label {
            position: absolute;
            left: 12px;
            top: 12px;
            color: #9ca3af;
            transition: all 0.3s ease;
            pointer-events: none;
            background-color: white;
            padding: 0 5px;
        }

        .password-toggle {
            position: absolute;
            right: 12px;
            top: 12px;
            cursor: pointer;
            color: #9ca3af;
        }

        .glow {
            box-shadow: 0 0 15px rgba(59, 130, 246, 0.5);
        }
    </style>
</head>
<body class="bg-gradient-to-br from-blue-50 to-indigo-100 min-h-screen flex items-center justify-center p-4">
    <div class="max-w-md w-full space-y-8">
        <div class="text-center">
            <h1 class="text-4xl font-extrabold text-gray-900 mb-2">Bienvenue</h1>
            <p class="text-gray-600">Connectez-vous ou créez un compte</p>
        </div>

        @if (ViewBag.Erreur != null)
        {
                <div class="bg-red-100 text-red-600 p-3 rounded text-sm text-center fade-in">@ViewBag.Erreur</div>
        }

        <div class="bg-white rounded-xl shadow-2xl overflow-hidden p-1 glow transition-all duration-500">
            <div class="flex rounded-lg overflow-hidden mb-6">
                <button class="tab-button active flex-1 py-3 px-4 text-center font-medium" onclick="switchTab('login')">
                    <i class="fas fa-sign-in-alt mr-2"></i>Connexion
                </button>
                <button class="tab-button flex-1 py-3 px-4 text-center font-medium" onclick="switchTab('register')">
                    <i class="fas fa-user-plus mr-2"></i>Inscription
                </button>
            </div>

            <div class="p-6 pt-0">
                @if (TempData["Success"] != null)
                {
                    <div class="bg-green-100 text-green-700 p-3 rounded text-sm text-center fade-in">
                        @TempData["Success"]
                    </div>
                }
                @if (ViewBag.Erreur != null)
                {
                    <div class="bg-red-100 text-red-600 p-3 rounded text-sm text-center fade-in">
                        @ViewBag.Erreur
                    </div>
                }

                <!-- Connexion -->
                <div id="login-tab" class="tab-content active">
                    <form method="post" asp-controller="Compte" asp-action="Login" class="space-y-4">
                        <div class="input-group">
                            <input type="email" name="email" id="loginEmail" placeholder=" " required class="w-full px-4 py-3 border rounded-lg">
                            <label for="loginEmail">Adresse email</label>
                        </div>

                        <div class="input-group">
                            <input type="password" name="motDePasse" id="loginPassword" placeholder=" " required class="w-full px-4 py-3 border rounded-lg pr-10">
                            <label for="loginPassword">Mot de passe</label>
                            <span class="password-toggle" onclick="togglePassword('loginPassword', this)">
                                <i class="far fa-eye"></i>
                            </span>
                        </div>

                        <div class="flex items-center justify-between text-sm">
                            <div class="flex items-center">
                                <input id="remember" type="checkbox" class="h-4 w-4 text-blue-600 border-gray-300 rounded">
                                <label for="remember" class="ml-2 text-gray-700">Se souvenir de moi</label>
                            </div>
                            <a href="#" class="text-blue-600 hover:text-blue-500">Mot de passe oublié ?</a>
                        </div>

                        <button type="submit" class="w-full bg-blue-500 hover:bg-blue-600 text-white py-3 px-4 rounded-lg font-medium">Connexion</button>
                    </form>
                </div>

                <!-- Inscription -->
                <div id="register-tab" class="tab-content">
                    <form method="post" asp-controller="Compte" asp-action="Register" class="space-y-4">
                        <div class="input-group">
                            <input type="text" name="Nom" id="registerName" placeholder=" " required class="w-full px-4 py-3 border rounded-lg">
                            <label for="registerName">Nom complet</label>
                        </div>

                        <div class="input-group">
                            <input type="email" name="Email" id="registerEmail" placeholder=" " required class="w-full px-4 py-3 border rounded-lg">
                            <label for="registerEmail">Adresse email</label>
                        </div>

                        <div class="input-group">
                            <input type="password" name="MotDePasse" id="registerPassword" placeholder=" " required class="w-full px-4 py-3 border rounded-lg pr-10">
                            <label for="registerPassword">Mot de passe</label>
                            <span class="password-toggle" onclick="togglePassword('registerPassword', this)">
                                <i class="far fa-eye"></i>
                            </span>
                        </div>

                        <div class="flex items-center">
                            <input id="terms" type="checkbox" required class="h-4 w-4 text-blue-600 border-gray-300 rounded">
                            <label for="terms" class="ml-2 text-sm text-gray-700">
                                J'accepte les <a href="#" class="text-blue-600 hover:text-blue-500">conditions d'utilisation</a>
                            </label>
                        </div>

                        <button type="submit" class="w-full bg-indigo-500 hover:bg-indigo-600 text-white py-3 px-4 rounded-lg font-medium">S'inscrire</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
        function switchTab(tabName) {
            document.querySelectorAll('.tab-content').forEach(tab => {
                tab.classList.remove('active');
            });
            document.getElementById(tabName + '-tab').classList.add('active');

            document.querySelectorAll('.tab-button').forEach(button => {
                button.classList.remove('active');
            });

            const activeButton = Array.from(document.querySelectorAll('.tab-button')).find(button => {
                return button.textContent.includes(tabName === 'login' ? 'Connexion' : 'Inscription');
            });
            if (activeButton) activeButton.classList.add('active');
        }

        function togglePassword(inputId, toggleElement) {
            const input = document.getElementById(inputId);
            const icon = toggleElement.querySelector('i');
            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.replace('fa-eye', 'fa-eye-slash');
            } else {
                input.type = 'password';
                icon.classList.replace('fa-eye-slash', 'fa-eye');
            }
        }

        document.addEventListener('DOMContentLoaded', () => {
            const elements = document.querySelectorAll('.text-center, .tab-content.active');
            elements.forEach((el, index) => {
                el.classList.add('fade-in');
                el.style.animationDelay = `${index * 0.1}s`;
            });
        });
    </script>
</body>
</html>
