@model GestionStock.Models.Utilisateur

@{
    ViewData["Title"] = "Delete";
}

@section Styles {
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }

        h1 {
            text-align: center;
            margin-top: 30px;
            font-size: 2rem;
            color: #343a40;
            font-weight: bold;
        }

        h4 {
            font-size: 1.5rem;
            color: #6c757d;
            text-align: center;
        }

        .row {
            display: flex;
            justify-content: center;
            margin-top: 30px;
        }

        .col-md-6 {
            width: 50%;
            padding: 30px;
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
        }

        .form-group {
            margin-bottom: 20px;
        }

            .form-group label {
                font-size: 1rem;
                font-weight: bold;
                color: #495057;
                display: block;
                margin-bottom: 8px;
            }

            .form-group input,
            .form-group select {
                width: 100%;
                padding: 10px;
                font-size: 1rem;
                border: 1px solid #ced4da;
                border-radius: 5px;
                background-color: #f8f9fa;
                transition: border-color 0.3s;
            }

                .form-group input:focus,
                .form-group select:focus {
                    border-color: #28a745;
                    outline: none;
                }

        .btn-danger {
            width: 100%;
            padding: 12px;
            background-color: #dc3545;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 1.2rem;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .btn-danger:hover {
                background-color: #c82333;
            }

        .back-link {
            text-align: center;
            margin-top: 20px;
        }

            .back-link a {
                color: #007bff;
                font-size: 1rem;
                text-decoration: none;
                transition: color 0.3s;
            }

                .back-link a:hover {
                    color: #0056b3;
                }
    </style>
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div class="row">
    <div class="col-md-6">
        <h4>Utilisateur</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Nom)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Nom)
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.MotDePasse)
            </dt>
            <dd class="col-sm-8">
                ••••••••
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Role)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Role)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        </form>

        <div class="back-link">
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>
