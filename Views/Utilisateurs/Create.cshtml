@model GestionStock.Models.Utilisateur

@{
    ViewData["Title"] = "Create";
}

@section Styles {
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }

        h1 {
            text-align: center;
            margin-top: 30px;
            font-size: 2rem;
            color: #343a40;
            font-weight: bold;
        }

        h4 {
            font-size: 1.5rem;
            color: #6c757d;
            text-align: center;
        }

        .row {
            display: flex;
            justify-content: center;
            margin-top: 30px;
        }

        .col-md-4 {
            width: 50%;
            padding: 30px;
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
        }

        .form-group {
            margin-bottom: 20px;
        }

            .form-group label {
                font-size: 1rem;
                font-weight: bold;
                color: #495057;
                display: block;
                margin-bottom: 8px;
            }

            .form-group input,
            .form-group select {
                width: 100%;
                padding: 10px;
                font-size: 1rem;
                border: 1px solid #ced4da;
                border-radius: 5px;
                background-color: #f8f9fa;
                transition: border-color 0.3s;
            }

                .form-group input:focus,
                .form-group select:focus {
                    border-color: #28a745;
                    outline: none;
                }

        .btn-primary {
            width: 100%;
            padding: 12px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 1.2rem;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        .back-link {
            text-align: center;
            margin-top: 20px;
        }

            .back-link a {
                color: #007bff;
                font-size: 1rem;
                text-decoration: none;
                transition: color 0.3s;
            }

                .back-link a:hover {
                    color: #0056b3;
                }
    </style>
}

<h1>Create</h1>
<h4>Utilisateur</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Nom -->
            <div class="form-group">
                <label asp-for="Nom" class="control-label"></label>
                <input asp-for="Nom" class="form-control" />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>

            <!-- Email -->
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Mot de passe -->
            <div class="form-group">
                <label asp-for="MotDePasse" class="control-label"></label>
                <input asp-for="MotDePasse" class="form-control" type="password" />
                <small class="form-text text-muted">Le mot de passe doit contenir au moins 6 caractères.</small>
                <span asp-validation-for="MotDePasse" class="text-danger"></span>
            </div>

            <!-- Rôle -->
            <div class="form-group">
                <label asp-for="Role" class="control-label"></label>
                <select asp-for="Role" class="form-control">
                    <option value="Admin" selected>Admin</option>
                    <option value="Membre">Membre</option>
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>

            <!-- Bouton -->
            <div class="form-group">
                <input type="submit" value="Créer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="back-link">
    <a asp-action="Index">Retour à la liste</a>
</div>

